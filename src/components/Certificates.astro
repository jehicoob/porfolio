---
const CERTIFICATES = [
    {
        name: "Backend con PHP",
        imageUrl: "/certificates/diploma-web-php.webp",
    },
    {
        name: "Frontend con Vue.js",
        imageUrl: "/certificates/diploma-web-vue.webp",
    },
    {
        name: "Fundamentos de TypeScript",
        imageUrl: "/certificates/diploma-typescript.webp",
    },
    {
        name: "TypeScript - Tipos avanzados",
        imageUrl: "/certificates/diploma-typescript-tipos-avanzados.webp",
    },
    {
        name: "TypeScript - POO",
        imageUrl: "/certificates/diploma-typescript-poo.webp",
    },
    {
        name: "Curso practico SQL",
        imageUrl: "/certificates/diploma-practico-sql.webp",
    },
];
---

<div class="flex flex-col md:grid grid-cols-2 gap-4 md:gap-12 items-center text-white">
    {
        CERTIFICATES.map(({ name, imageUrl }) => (
            <img
                src={imageUrl}
                alt={name}
                class="w-full rounded-xl object-cover "
            />
        ))
    }
</div>
